						</IsRegularExpression>
						<From desc="原内容">
							<Value>
								<![CDATA[]]>
							</Value>
						</From>
						<To desc="目标内容">
							<Value>
								<![CDATA[]]>
							</Value>
						</To>
					</Replace>
