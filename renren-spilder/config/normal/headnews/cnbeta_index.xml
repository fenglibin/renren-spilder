<?xml version="1.0" encoding="gbk"?>
<Rules>
	<MainUrl>
		<Values desc="链接的列表地址，Value中的列表地址可以是多条，以逗号分开">
			<Value desc="当前主页面的Url地址">
				<![CDATA[http://www.cnbeta.com/]]>
			</Value>
		</Values>
		<DesArticleId>
			<Value>8</Value>
		</DesArticleId>
		<MainRange desc="内容范围">
			<Start>
				<Value><![CDATA[<html]]></Value>
			</Start>
			<End>
				<Value><![CDATA[</html>]]></Value>
			</End>
		</MainRange>
		<Charset desc="编码">
			<Value>
				<![CDATA[gb2312]]>
			</Value>
		</Charset>
		<ImageDescUrl desc="将原内容中的图片地址替换、用户保存图片的相对路径">
			<Value>
				<![CDATA[/uploads/allimg/]]>
			</Value>
		</ImageDescUrl>
		<ImageSaveLocation desc="保存图片的路径，将图片写出到硬盘上">
			<Value>
				<![CDATA[/home/fenglibin/www/img.renren.it/]]>
			</Value>
		</ImageSaveLocation>
		<Recommend desc="随机推荐数，即多少篇文章推荐一篇.'0'表示不随机推荐">
			<Value><![CDATA[5]]></Value>
		</Recommend>
		<SRecommend desc="是否增加到特别推荐中">
			<Value><![CDATA[true]]></Value>
		</SRecommend>
		<UrlFilter url="url筛选">
			<MustInclude desc="url中必须包括的字符串">
				<Value>
					<![CDATA[articles/([0-9])*.htm$]]>
				</Value>
			</MustInclude>
			<MustNotInclude desc="url中不能够包括的字符串">
				<Value>
					<![CDATA[]]>
				</Value>
			</MustNotInclude>
			<IsCompByRegex desc="必须包括与不能够包括这两项，与URL的比较是否通过正则规则进行比较,值只可以是true及false">
				<Value>true</Value>
			</IsCompByRegex>
		</UrlFilter>
		<DealOnePage>true</DealOnePage>
	</MainUrl>
	<Child>
		<Charset desc="编码">
			<Value>
				<![CDATA[gb2312]]>
			</Value>
		</Charset>
		<Title desc="标题">
			<Start>
				<Value><![CDATA[<title>]]></Value>
			</Start>
			<End>
				<Value><![CDATA[_cnBeta]]></Value>
			</End>
		</Title>
		<Content desc="内容">
			<Start>
				<Value><![CDATA[align="right" id="sign" onload="fixPNG(this)"/></a>]]></Value>
			</Start>
			<End>
				<Value><![CDATA[<div class="digbox">]]></Value>
			</End>
		</Content>
		<AddUrl desc="是否将当前文章采集页的地址加到内容的尾部，值只可以是true中或false">
			<Value>
				<![CDATA[true]]>
			</Value>
			<Display>
				<![CDATA[<font color=#CCCCCC>CNBETA</font>]]>
			</Display>
		</AddUrl>
	</Child>
</Rules>
