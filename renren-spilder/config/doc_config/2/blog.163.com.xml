<?xml version="1.0" encoding="gbk"?>
<Rules>
	<MainUrl>
		<Values desc="链接的列表地址，Value中的列表地址可以是多条，以逗号分开">
			<Value desc="当前主页面的Url地址">
				<![CDATA[http://blog.163.com/photo.html,http://blog.163.com/community.html,http://blog.163.com/know.html,http://blog.163.com/culture.html,http://ent.163.com/blog/,http://blog.163.com/music.html,http://blog.163.com/sense.html,http://blog.163.com/life.html,http://blog.163.com/health.html,http://blog.163.com/travel.html,http://blog.163.com/leisure.html,http://blog.163.com/edu.html,http://blog.163.com/arts.html,http://blog.163.com/sports.html,http://money.163.com/blog/,http://blog.163.com/auto.html,http://tech.163.com/special/00092FUU/blog_tech.html,http://blog.163.com/blogger.html]]>
			</Value>
		</Values>
		<DesArticleId>
			<Value>1</Value>
		</DesArticleId>
		<AutoDetect>
			<TypeMapMakeClass>it.renren.spilder.type.DedecmsTypesMap</TypeMapMakeClass>
		</AutoDetect>
		<MainRange desc="内容范围">
			<Start>
				<Value><![CDATA[<html]]></Value>
			</Start>
			<End>
				<Value><![CDATA[</html>]]></Value>
			</End>
		</MainRange>
		<Charset desc="编码">
			<Value>
				<![CDATA[gbk]]>
			</Value>
		</Charset>
		<ImageDescUrl desc="将原内容中的图片地址替换、用户保存图片的相对路径">
			<Value>
				<![CDATA[/uploads/allimg/]]>
			</Value>
		</ImageDescUrl>
		<ImageSaveLocation desc="保存图片的路径，将图片写出到硬盘上">
			<Value>
				<![CDATA[/home/fenglibin/www/img.renren.it/doc_images/]]>
			</Value>
		</ImageSaveLocation>
		<Recommend desc="随机推荐数，即多少篇文章推荐一篇.'0'表示不随机推荐">
			<Value><![CDATA[5]]></Value>
		</Recommend>
		<UrlFilter url="url筛选">
			<MustInclude desc="url中必须包括的字符串">
				<Value>
					<![CDATA[/blog/static/]]>
				</Value>
			</MustInclude>
			<MustNotInclude desc="url中不能够包括的字符串">
				<Value>
					<![CDATA[]]>
				</Value>
			</MustNotInclude>
			<IsCompByRegex desc="必须包括与不能够包括这两项，与URL的比较是否通过正则规则进行比较,值只可以是true及false">
				<Value>false</Value>
			</IsCompByRegex>
		</UrlFilter>
		<!--OneUrlSleepTime>
			<Value>60000</Value>
    </OneUrlSleepTime-->
	</MainUrl>
	<Child>
		<Charset desc="编码">
			<Value>
				<![CDATA[gbk]]>
			</Value>
		</Charset>
		<Title desc="标题">
			<Start>
				<Value><![CDATA[<h3 class="title pre fs1"><span class="tcnt">]]></Value>
			</Start>
			<End>
				<Value><![CDATA[</span>]]></Value>
			</End>
		</Title>
		<Content desc="内容">
			<Start>
				<Value><![CDATA[<div class="nbw-blog-start"></div>]]></Value>
			</Start>
			<End>
				<Value><![CDATA[<div class="nbw-blog-end"></div>]]></Value>
			</End>
		</Content>
		<AddUrl desc="是否将当前文章采集页的地址加到内容的尾部，值只可以是true中或false">
			<Value>
				<![CDATA[true]]>
			</Value>
		</AddUrl>
	</Child>
</Rules>
