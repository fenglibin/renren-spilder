			0,
			1,
			#click#,
			#title#,
			#writer#,
			#source#,
			unix_timestamp(now()),
			unix_timestamp(now()),
			unix_timestamp(now()),
			1,
			#keywords#,
			#description#,
			#weight#,
			1,
			#flag#,
			#litpic#,
			#filename#,
			0
		)
		]]>
	</insert>
</sqlMap>